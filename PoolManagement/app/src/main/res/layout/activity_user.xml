<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:clipToPadding="false"
    tools:context=".User">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginTop="55dp"
        android:text="@string/text_user"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_card_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="56dp"
        android:text="@string/text_card_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_user" />

    <TextView
        android:id="@+id/text_name_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:text="@string/text_name_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_card_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_card_user"
        app:layout_constraintTop_toBottomOf="@+id/text_card_user" />

    <TextView
        android:id="@+id/text_contact_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="48dp"
        android:text="@string/text_contact_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_name_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_name_user"
        app:layout_constraintTop_toBottomOf="@+id/text_name_user" />

    <TextView
        android:id="@+id/text_gender_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="52dp"
        android:text="@string/text_gender_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_contact_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_contact_user"
        app:layout_constraintTop_toBottomOf="@+id/text_contact_user" />

    <TextView
        android:id="@+id/text_visits_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="56dp"
        android:text="@string/text_visits_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_gender_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_gender_user"
        app:layout_constraintTop_toBottomOf="@+id/text_gender_user" />

    <TextView
        android:id="@+id/text_validity_user"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="52dp"
        android:text="@string/text_validity_user"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_visits_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_visits_user"
        app:layout_constraintTop_toBottomOf="@+id/text_visits_user" />


    <!-- <EditText
        android:id="@+id/editText_validity_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/editText_validity_user"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_visits_user"
        app:layout_constraintTop_toBottomOf="@+id/editText_visits_user" /> -->

    <EditText
        android:id="@+id/editText_card_user"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/editText_card_user"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/text_card_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toEndOf="@+id/text_card_user"
        app:layout_constraintTop_toTopOf="@+id/text_card_user"
        app:layout_constraintVertical_bias="0.868" />

    <EditText
        android:id="@+id/editText_name_user"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/editText_name_user"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/text_name_user"
        app:layout_constraintEnd_toEndOf="@+id/editText_card_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_card_user"
        app:layout_constraintTop_toBottomOf="@+id/editText_card_user"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_user"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="newuser"
        android:text="@string/button_user"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_validityDate"
        app:layout_constraintVertical_bias="0.356" />

    <EditText
        android:id="@+id/et_validityDate"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:hint="Select Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_validity_user"
        app:layout_constraintEnd_toEndOf="@+id/editText_visits_user"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="@+id/editText_visits_user"
        app:layout_constraintTop_toTopOf="@+id/text_validity_user"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_contact_user"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/editText_contact_user"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/text_contact_user"
        app:layout_constraintEnd_toEndOf="@+id/editText_name_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_name_user"
        app:layout_constraintTop_toTopOf="@+id/text_contact_user"
        app:layout_constraintVertical_bias="0.883" />

    <EditText
        android:id="@+id/editText_visits_user"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/editText_visits_user"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_visits_user"
        app:layout_constraintEnd_toEndOf="@+id/spinner4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner4"
        app:layout_constraintTop_toTopOf="@+id/text_visits_user"
        app:layout_constraintVertical_bias="0.821" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:entries="@array/spinner_items"
        app:layout_constraintBottom_toBottomOf="@+id/text_gender_user"
        app:layout_constraintEnd_toEndOf="@+id/editText_contact_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_contact_user"
        app:layout_constraintTop_toTopOf="@+id/text_gender_user"
        app:layout_constraintVertical_bias="0.869" />


</androidx.constraintlayout.widget.ConstraintLayout>